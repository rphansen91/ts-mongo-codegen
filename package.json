{
  "name": "@elevatejs/ts-mongo-codegen",
  "version": "3.0.0",
  "description": "This project generates types for a seamless integration between GraphQL and MongoDB.",
  "keywords": [
    "graphql",
    "mongo",
    "codegen",
    "ts",
    "typescript"
  ],
  "main": "dist/ts-mongo-codegen.umd.js",
  "module": "dist/ts-mongo-codegen.es5.js",
  "typings": "dist/types/ts-mongo-codegen.d.ts",
  "files": [
    "dist"
  ],
  "author": "Ryan P. Hansen",
  "homepage": "https://elevatejs.com/blog/ts-mongo-codegen",
  "repository": {
    "type": "git",
    "url": "https://github.com/rphansen91/ts-mongo-codegen"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "fix": "eslint --ext .js,.jsx,.ts,.tsx ./src --fix",
    "prebuild": "rimraf dist",
    "build:ts": "tsc --module commonjs",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && cp src/mongo-types.ts dist/types/mongo-types.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "test:server": "ts-node --project tsconfig.test.json tools/example-server.ts",
    "deploy-docs": "ts-node --project tsconfig.test.json tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "generate": "graphql-codegen",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node --project tsconfig.test.json tools/semantic-release-prepare",
    "travis-deploy-once": "travis-deploy-once --pro",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "snyk-protect": "snyk protect"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 80,
        "lines": 75,
        "statements": 75
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@graphql-codegen/cli": "^5.0.0 ",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.155",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "apollo-server": "^3.12.1",
    "colors": "^1.3.2",
    "commitizen": "^4.1.24.1.2",
    "coveralls": "^3.0.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-config": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prompt": "^1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.17.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "semantic-release": "^17.0.8",
    "shelljs": "^0.8.3",
    "snyk": "^1.346.0",
    "travis-deploy-once": "^5.0.9",
    "ts-jest": "^26.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@graphql-codegen/plugin-helpers": "^5.0.1",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.6",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.15",
    "mongodb": "^6.1.0"
  }
}
